---
import BaseLayout from './Layout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p class="right"><a class="badge__link pink-text" href="/portfolio/#projects">‚Üê Projects</a></p>
    <h1>{frontmatter.title}</h1>
    <div class="center extra-spacing">
        <img class="pro-img" width="500px" height="281" src={frontmatter.worksImage1.url} alt={frontmatter.worksImage1.alt} />
    </div>
        <div class="badges-left-margin">
        <span class="badge badge--item">{frontmatter.platform}</span>
        <span class="badge badge--item">{frontmatter.engine}</span>
    </div>
    <slot />
</BaseLayout>

